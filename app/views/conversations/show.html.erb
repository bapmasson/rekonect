<div class="chat-container">
  <h2>Conversation avec <%= @conversation.contact.name %></h2>
  <hr>
  <div class="sms-chat">
    <% @messages.each do |message| %>
      <div class="sms-row <%= message.sender_id == current_user.id ? 'sms-me' : 'sms-other' %>">
        <div class="sms-bubble">
          <span class="sms-content"><%= message.content %></span>
        </div>
        <div class="sms-meta">
          <%= l(message.created_at, format: :short) %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="chat-form-row">
    <%= form_with model: Message.new, url: messages_path, local: true, html: { class: "chat-form" } do |f| %>
      <%= f.hidden_field :conversation_id, value: @conversation.id %>
      <%= f.hidden_field :contact_id, value: @conversation.contact_id %>
      <%= f.text_area :content, placeholder: "Message", class: "chat-input" %>
      <%= f.submit "Envoyer", class: "chat-send-btn" %>
    <% end %>
  </div>
</div>
